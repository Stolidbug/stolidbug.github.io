{% extends "frontend/base.html.twig" %}

{% block title %}
    {{ 'frontend.blog.show.title'|trans }}
{% endblock %}

{% block body %}
    <section class="bg-green relative">
        <div class="max-w-7xl mx-auto py-16 px-4 lg:px-8 lg:py-32">
            <h1 class="text-3xl font-extrabold text-white">{{ 'frontend.blog.last_articles.title'|trans }}</h1>
            <div class="mt-6 border-t border-orange pt-10">
                <div class="grid grid-cols-1 gap-8 gap-y-8 sm:grid-cols-2 lg:grid-cols-3">
                    {% for article in articles %}
                        <article class="pt-6">
                            <div class="flow-root rounded-3xl bg-blue px-6 pb-8 relative">
                                <div class="-mt-6">
                                    <div
                                        class="inline-flex items-center justify-center rounded-md bg-white p-3 shadow-lg">
                                        <h2 class="text-lg font-bold text-amber-500 mb-2">{{ article.title }}</h2>
                                    </div>
                                    <img class="w-full h-40 object-cover object-center mt-8"
                                         src="{{ stream_image(article) }}" alt="{{ article.title }}">
                                    <div class="py-4">
                                        <h2 class="text-lg font-bold text-gray-800 mb-2">{{ article.title }}</h2>
                                        <div class="ck-content"><p class="text-gray-700 leading-6 text-sm">{{ article.content|u.truncate(40, '...')|striptags|raw }}</p></div>
                                        <div class="flex justify-center mt-4">
                                            <a href="{{ path(constant('App\\UI\\Frontend\\Controller\\Routes::FRONTEND_BLOG_SHOW_ARTICLE')['name'], {'slug': article.slug}) }}"
                                               class="bg-orange text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out article-show-button"
                                               target="_blank">
                                                {{ 'frontend.blog.read.button'|trans }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
