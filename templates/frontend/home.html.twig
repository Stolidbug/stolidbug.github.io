{% extends "frontend/base.html.twig" %}

{% block title %}{{ 'frontend.home.title'|trans }}{% endblock %}

{% block body %}


    <section class="container-big relative bg-white lg:rounded-br-full lg:rounded-tl-full py-16 lg:py-32">
        <div class="mx-auto max-w-md px-4 text-center sm:max-w-3xl sm:px-6 lg:max-w-7xl lg:px-8">
            <h2 class="text-base font-semibold uppercase tracking-wider text-brown">Developper</h2>
            <p class="mt-2 text-3xl font-extrabold tracking-tight text-green sm:text-4xl">{{ 'frontend.Who_I_am.title'|trans }}</p>
            <p class="mx-auto mt-5 max-w-prose text-xl text-black">
                {{ 'frontend.Who_I_am.content'|trans }}
            </p>
        </div>
    </section>

    <section class="bg-green relative">
        <div class="max-w-7xl mx-auto py-16 px-4 lg:px-8 lg:py-32">
            <h1 class="text-3xl font-extrabold text-white">{{ 'frontend.skills.title'|trans }}</h1>
            <div class="mt-6 border-t border-orange pt-10">
                <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-2">
                    <article class="pt-6">
                        <div class="flow-root rounded-3xl bg-blue px-6 pb-8 relative">
                            <div class="-mt-6">
                                <div class="inline-flex items-center justify-center rounded-md bg-white p-3 shadow-lg">
                                    <img src="assets/frontend/images/php-logo.svg" alt="icon php" class="h-10 w-10">
                                </div>
                                <h2 class="mt-6 text-lg font-medium tracking-tight text-dark-blue">{{ 'frontend.skills.php.title'|trans }}</h2>
                                <p class="mt-5 text-base text-black">
                                    {{ 'frontend.skills.php.content'|trans }}
                                </p>
                            </div>
                        </div>
                    </article>

                    <article class="pt-6">
                        <div class="flow-root rounded-3xl bg-blue px-6 pb-8 relative">
                            <div class="-mt-6">
                                <div class="inline-flex items-center justify-center rounded-md bg-white p-3 shadow-lg">
                                    <img src="assets/frontend/images/monofony.jpg" alt="icon monofony" class="h-10 w-10">
                                </div>
                                <h2 class="mt-6 text-lg font-medium tracking-tight text-dark-blue">{{ 'frontend.skills.monofony.title'|trans }}</h2>
                                <p class="mt-5 text-base text-black">
                                    {{ 'frontend.skills.monofony.content'|trans }}
                                </p>
                            </div>
                        </div>
                    </article>

                    <article class="pt-6">
                        <div class="flow-root rounded-3xl bg-blue px-6 pb-8 relative">
                            <div class="-mt-6">
                                <div class="inline-flex items-center justify-center rounded-md bg-white p-3 shadow-lg">
                                    <img src="assets/frontend/images/symfony.png" alt="icon symfony" class="h-10 w-10">
                                </div>
                                <h2 class="mt-6 text-lg font-medium tracking-tight text-dark-blue"> {{ 'frontend.skills.symfony.title'|trans }}</h2>
                                <p class="mt-5 text-base text-black">
                                    {{ 'frontend.skills.symfony.content'|trans }}
                                </p>
                            </div>
                        </div>
                    </article>

                    <article class="pt-6">
                        <div class="flow-root rounded-3xl bg-blue px-6 pb-8 relative">
                            <div class="-mt-6">
                                <div class="inline-flex items-center justify-center rounded-md bg-white p-3 shadow-lg">
                                    <img src="assets/frontend/images/sylius.png" alt="icon sylius" class="h-10 w-10">
                                </div>
                                <h2 class="mt-6 text-lg font-medium tracking-tight text-dark-blue">{{ 'frontend.skills.sylius.title'|trans }}</h2>
                                <p class="mt-5 text-base text-black">
                                    {{ 'frontend.skills.sylius.content'|trans }}
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>

    {% if articles|length > 0 %}

        <div class="separator">
            <svg class="nuage" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M0 0h24v24H0z" fill="none"/>
                <path
                    d="M18.926 10.318C18.948 9.536 18.5 8.734 17.814 8.354 17.332 7.424 16.189 6.5 15.649 6.5c-.266 0-.526.087-1.381.273C13.627 5.938 12.473 5 11.309 5 9.144 5 7.309 7.268 7.309 9.434v.147C6.62 9.737 6 10.445 6 11.318 6 12.195 6.62 13 7.5 13h12c.88 0 1.5-.805 1.5-1.682 0-.548-.248-1.044-.646-1.364.398-.318.646-.816.646-1.364 0-.864-.676-1.482-1.5-1.482-.477 0-.883-.402-.935-.883z"/>
            </svg>
            <svg class="nuage" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M0 0h24v24H0z" fill="none"/>
                <path
                    d="M18.926 10.318C18.948 9.536 18.5 8.734 17.814 8.354 17.332 7.424 16.189 6.5 15.649 6.5c-.266 0-.526.087-1.381.273C13.627 5.938 12.473 5 11.309 5 9.144 5 7.309 7.268 7.309 9.434v.147C6.62 9.737 6 10.445 6 11.318 6 12.195 6.62 13 7.5 13h12c.88 0 1.5-.805 1.5-1.682 0-.548-.248-1.044-.646-1.364.398-.318.646-.816.646-1.364 0-.864-.676-1.482-1.5-1.482-.477 0-.883-.402-.935-.883z"/>
            </svg>
            <svg class="nuage" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M0 0h24v24H0z" fill="none"/>
                <path
                    d="M18.926 10.318C18.948 9.536 18.5 8.734 17.814 8.354 17.332 7.424 16.189 6.5 15.649 6.5c-.266 0-.526.087-1.381.273C13.627 5.938 12.473 5 11.309 5 9.144 5 7.309 7.268 7.309 9.434v.147C6.62 9.737 6 10.445 6 11.318 6 12.195 6.62 13 7.5 13h12c.88 0 1.5-.805 1.5-1.682 0-.548-.248-1.044-.646-1.364.398-.318.646-.816.646-1.364 0-.864-.676-1.482-1.5-1.482-.477 0-.883-.402-.935-.883z"/>
            </svg>
        </div>

        <section class="bg-green relative">
            <div class="max-w-7xl mx-auto py-16 px-4 lg:px-8 lg:py-32">
                <h1 class="text-3xl font-extrabold text-white">{{ 'frontend.blog.last_articles.title'|trans }}</h1>
                <div class="mt-6 border-t border-orange pt-10">
                    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-2">
                        {% for article in articles %}
                            <article class="pt-6">
                                <div class="flow-root rounded-3xl bg-blue px-6 pb-8 relative">
                                    <div class="-mt-6">
                                        <div
                                            class="inline-flex items-center justify-center rounded-md bg-white p-3 shadow-lg">
                                            <h2 class="text-lg font-bold text-amber-500 mb-2">{{ article.title }}</h2>
                                        </div>
                                        <img class="w-full h-40 object-cover object-center mt-8"
                                             src="{{ stream_image(article) }}" alt="{{ article.title }}">
                                        <div class="py-4">
                                            <h2 class="text-lg font-bold text-gray-800 mb-2">{{ article.title }}</h2>
                                            <div class="ck-content"><p class="text-gray-700 leading-6 text-sm">{{ article.content|u.truncate(120, '...')|striptags|raw }}</p></div>
                                            <div class="flex justify-center mt-4">
                                                <a href="{{ path(constant('App\\UI\\Frontend\\Controller\\Routes::FRONTEND_BLOG_SHOW_ARTICLE')['name'], {'slug': article.slug}) }}"
                                                   class="bg-orange text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out article-show-button"
                                                   target="_blank">
                                                    {{ 'frontend.blog.read.button'|trans }}
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </div>
                {% if allArticles is defined and true %}
                    <div class="flex pt-6 justify-center mt-4">
                        <a href="{{ path(constant('App\\UI\\Frontend\\Controller\\Routes::FRONTEND_BLOG_LAST_READ_ARTICLES')['name']) }}"
                           class="bg-orange text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out w-full text-center article-show-button"
                           target="_blank" >
                            {{ 'frontend.blog.last_articles.button'|trans }}
                        </a>
                    </div>
                {% endif %}
            </div>
        </section>

    {% endif %}
{% endblock %}

