{% extends 'frontend/base.html.twig' %}

{% block title %}{{ 'frontend.game.template.mystery_number_title'|trans }}{% endblock %}

{% block body %}
    <section class="container-big bg-blue flow-root rounded-3xl px-6 pb-8 relative mt-10">
        <div class="max-w-7xl mx-auto py-16 px-4 lg:px-8 lg:py-32">

            <div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md bg-white p-6 rounded-lg shadow-md">
                <h1 class="mb-8 lg:mb-16 font-light text-center text-gray-500 dark:text-gray-400 sm:text-xl">{{ 'frontend.game.template.guess_mystery_number'|trans }}</h1>

                {% if difficulty % 500 == 0 %}
                    <div class="bg-orange text-white p-2 rounded-lg mb-6">
                        {{ 'frontend.game.processor.boss_level'|trans }}
                    </div>
                {% else %}
                    <p class="mb-4 text-center">{{ 'frontend.game.template.guess_between'|trans({'difficulty': difficulty}) }}</p>
                    <p class="mb-8 text-center">{{ 'frontend.game.template.max_tries'|trans({'max_tries': max_tries}) }}</p>
                {% endif %}

                {% if message %}
                    <div class="bg-green text-white p-2 rounded-lg mb-6">
                        {{ message }}
                    </div>
                {% endif %}

                {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                <div>
                    {{ form_label(form.guess, null, {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300'}, 'attr': {'class': 'block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light'}}) }}
                    {{ form_widget(form.guess, {'attr': {'class': 'block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light'}}) }}
                </div>
                {% if not showRefreshButton %}
                    <button type="submit" class="py-3 px-5 text-sm font-medium text-center text-white rounded-lg bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-offset-2 focus:ring-indigo-500">Deviner</button>
                {% else %}
                    <a href="{{ path('app_frontend_mystery_number', {'refresh': 1}) }}" class="py-3 px-5 text-sm font-medium text-center text-white rounded-lg bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-offset-2 focus:ring-indigo-500">Recommencer</a>
                {% endif %}
                {{ form_end(form) }}

            </div>

        </div>
    </section>

{% endblock %}
