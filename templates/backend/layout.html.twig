{% extends '@SyliusUi/Layout/sidebar.html.twig' %}

{% block title %}WebPage | {% endblock %}

{% block stylesheets %}
    {% include '@SyliusUi/_stylesheets.html.twig' with {'path': 'assets/backend/app.css'} %}
{% endblock %}

{% block topbar %}
    <a class="icon item" id="sidebar-toggle">
        <i class="sidebar icon"></i>
    </a>
    {% include 'backend/_search.html.twig' %}
    {% include 'backend/_security.html.twig' %}
{% endblock %}

{% block sidebar %}
    <a class="item" href="{{ path('app_backend_dashboard') }}" style="padding: 13px 0;">
        <div class="sidebar-logo">
            <img src="{{ asset('assets/backend/images/admin-logo.svg') }}" class="ui fluid image">
        </div>
    </a>
    {{ knp_menu_render('app.admin.main', {'template': '@SyliusUi/Menu/sidebar.html.twig', 'currentClass': 'active'}) }}
{% endblock %}

{% block footer %}
    AppName v{{ app_name_meta.version }} -
    {{ 'sylius.ui.powered_by'|trans }} <a href="https://www.monofony.com/" target="_blank">Monofony</a>.
{% endblock %}

{% block javascripts %}
    {% include '@SyliusUi/_javascripts.html.twig' with {'path': 'assets/backend/app.js'} %}
    {{ sonata_block_render_event('sylius.admin.layout.javascripts') }}
{% endblock %}
